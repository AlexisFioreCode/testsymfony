{% extends 'base.html.twig' %}

{% block title %}article{% endblock %}

{% block body %}
        <h2>Info sur l'article<h2>
        <div class="card my-3">
            <div class="card-header">
                Publié le : {{article.createddate|date('d/m/Y')}} à {{article.createddate|date('H:i')}}
                Par : {{article.author}}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p class="card-text">{{article.content}}</p>
            </div>
        </div>
{% endblock %}